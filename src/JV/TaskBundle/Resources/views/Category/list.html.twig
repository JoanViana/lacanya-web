{% extends 'DWSBundle::layout.html.twig' %}
{% trans_default_domain 'DWSBundle' %} 
{% block title %}DWS - {{ 'category.list.title'|trans }}{% endblock %}
{% block body %}
    {{ parent() }}
    <div class="container">
		<div class="col-md-10 col-md-offset-2">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{ 'category.list.header'|trans }}</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>{{ 'category.id'|trans }}</th>
                            <th>{{ 'category.name'|trans }}</th>                            
						</tr>
					</thead>
					<tbody>
						{% for category in categories %}
                            <tr>
								<td> {{ category.id }} </td> 
	                            <td> {{ category.name }} </td> 
	                           
                                <td class="actions">
                                	<a href="{{ path('pro_list_bycat', {'category': category.name}) }}" class="btn btn-sm btn-success">
			                            {{ 'action.listProducts'|trans }}
			                        </a>			
			                        <a href="{{ path('cat_show', {'id': category.id}) }}" class="btn btn-sm btn-info">
			                            {{ 'action.show'|trans }}
			                        </a>
			                        {% if is_granted('ROLE_APP_ADMIN') %}
			                        <a href="{{ path('cat_edit', {'id': category.id}) }}" class="btn btn-sm btn-primary">
			                            {{ 'action.edit'|trans }}
			                        </a>
			                        <a href="{{ path('cat_delete', {'id': category.id}) }}" class="btn btn-sm btn-danger btn-delete">
			                            {{ 'action.delete'|trans }}
			                        </a>
			                        {% endif %}
				                </td>
                            </tr>
                         {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
		{#
		<div class="row">
			<div class="text-center"> 
					<a href="{{ path('cat_create_def') }}"><button class="btn btn-primary btn-lg">Create default</button></a>
			</div>
		</div>
		#}
	</div>
{% endblock %}