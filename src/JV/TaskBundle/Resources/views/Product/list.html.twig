{% extends 'DWSBundle::layout.html.twig' %}
{% trans_default_domain 'DWSBundle' %} 
{% block title %}DWS - {{ 'product.list.title'|trans }}{% endblock %}

{% block body %}
    {{ parent() }}
	
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{ 'product.list.header'|trans }}</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>{{ 'product.id'|trans }}</th>
                            <th>{{ 'product.name'|trans }}</th>
                            <th>{{ 'product.category'|trans }}</th>
                            <th>{{ 'product.price'|trans }}</th>
                            <th>{{ 'product.description'|trans }}</th>
						</tr>
					</thead>
					<tbody>
						{% for product in products %}
                            <tr>
								<td> {{ product.id }} </td> 
	                            <td> {{ product.name }} </td> 
	                            <td> {{ product.category.name }} </td> 
	                            <td> {{ product.price }} </td> 
	                            <td> {{ product.description }} </td> 
                                <td class="actions">			
			                        <a href="{{ path('pro_show', {'id': product.id}) }}" class="btn btn-sm btn-info">
			                            {{ 'action.show'|trans }}
			                        </a>
			                        {% if is_granted('ROLE_APP_ADMIN') %}
			                        <a href="{{ path('pro_edit', {'id': product.id}, {'product': product, 'action': null}) }}" class="btn btn-sm btn-primary">
			                            {{ 'action.edit'|trans }}
			                        </a>
			                        <a href="{{ path('pro_delete', {'id': product.id}) }}" class="btn btn-sm btn-danger">
			                            {{ 'action.delete'|trans }}
			                        </a>
			                        {% endif %}
				                </td>
                            </tr>
                         {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
				{#
				<div class="row">
					<div class="text-center"> 
							<a href="{{ path('pro_create_def') }}"><button class="btn btn-primary btn-lg">Create default</button></a>
					</div>
				</div>
				#}
	</div>
{% endblock %}