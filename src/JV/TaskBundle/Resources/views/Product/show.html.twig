{% extends 'DWSBundle::layout.html.twig' %}
{% trans_default_domain 'DWSBundle' %} 
{% block title %}DWS - {{ 'product.show.title'|trans({'%productname%' : product.name }) }}{% endblock %}

{% block body %}
    {{ parent() }}
	<div class="container">
			<div class="col-md-10 col-md-offset-1">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{ 'product.show.header'|trans({'%productname%' : product.name }) }}</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>{{ 'product.id'|trans }}</th>
                            <th>{{ 'product.name'|trans }}</th>
                            <th>{{ 'product.category'|trans }}</th>
                            <th>{{ 'product.price'|trans }}</th>
                            <th>{{ 'product.description'|trans }}</th>
						</tr>
					</thead>
					<tbody>

                            <tr>
								<td> {{ product.id }} </td> 
	                            <td> {{ product.name }} </td> 
	                            <td> {{ product.category.name }} </td> 
	                            <td> {{ product.price }} </td> 
	                            <td> {{ product.description }} </td> 
                                <td class="actions">
                                	{% if is_granted('ROLE_APP_ADMIN') %}
			                        <a href="{{ path('pro_edit', {'id': product.id}, {'product': product, 'action': null}) }}" class="btn btn-sm btn-primary">
			                            {{ 'action.edit'|trans }}
			                        </a>
			                        <a href="{{ path('pro_delete', {'id': product.id}) }}" class="btn btn-sm btn-danger btn-delete">
			                            {{ 'action.delete'|trans }}
			                        </a>
			                        {% endif %}
				                </td>
                            </tr>                        
					</tbody>
				</table>
			</div>
		</div>
		{#
		<div class="row">
			<div class="text-center"> 
					<a href="{{ path('pro_list') }}"><button class="btn btn-primary btn-lg">List all</button></a>
			</div>
		</div>
		#}
	</div>
{% endblock %}