{% extends 'DWSBundle::layout.html.twig' %}
{% trans_default_domain 'DWSBundle' %}
{% block title %}DWS - {{ 'person.list.title'|trans }}{% endblock %}

{% block body %}
    {{ parent() }}
	<div class="container">
		<div class="col-md-12">
			<div class="page-header margin-none">
				<h2 class="padding-none">{{ 'person.list.header'|trans }}</h2>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>{{ 'person.id'|trans }}</th>
                            <th>{{ 'person.name'|trans }}</th>
                            {# <th>{{ 'person.age'|trans }}</th> #}
                            <th>{{ 'person.birthDate'|trans }}</th>
                            {# <th>{{ 'person.height'|trans }}</th> #}
                            <th>{{ 'person.email'|trans }}</th>
                            <th>{{ 'person.phone'|trans }}</th>
                            {#
                            <th>{{ 'person.gender'|trans }}</th>
                            <th>{{ 'person.descends'|trans }}</th>
                            <th>{{ 'person.vehicle'|trans }}</th>
                            <th>{{ 'person.preferredLanguage'|trans }}</th>
                            <th>{{ 'person.englishLevel'|trans }}</th>
                            <th>{{ 'person.personalWebsite'|trans }}</th>
                            <th>{{ 'person.cardNumber'|trans }}</th>
                            <th>{{ 'person.IBAN'|trans }}</th>
                            #}
						</tr>
					</thead>
					<tbody>
						{% for person in persons %}
                            <tr>
								<td> {{ person.id }} </td> 
	                            <td> {{ person.name }} </td> 
	                            {# <td> {{ person.age }} </td> #}
	                            <td> {{ person.birthDate|date('d-m-Y') }} </td> 
	                            {# <td> {{ person.height }} </td> #}
	                            <td> {{ person.email }} </td> 
	                            <td> {{ person.phone }} </td> 
	                            {#
	                            <td> {{ person.gender }} </td> 
	                            <td> {{ person.descends }} </td>
	                            <td>
                                    {% if person.vehicle %}
                                    	Yes
                                    {% else %}
                                        No
                                    {% endif %}
                                </td> 
	                            <td> {{ person.preferredLanguage }} </td> 
                                <td> {% swich person.englishLevel %}
                                    	{% case 1 %}
                                        	A1
                                        {% case 2 %}
                                        	A2
                                        {% case 3 %}
                                        	B1
                                        {% case 4 %}
                                        	B2
                                        {% case 5 %}
                                        	C1
                                        {% case 6 %}
                                        	C2
                                        {% default %}
                                        	None
									 {% endswitch %}
                                </td> 
	                            <td> {{ person.personalWebsite }} </td> 
	                            <td> {{ person.cardNumber }} </td> 
	                            <td> {{ person.IBAN }} </td> 
	                            #}
                                <td class="actions">			
			                        <a href="{{ path('per_show', {'id': person.id}) }}" class="btn btn-sm btn-info">
			                            {{ 'action.show'|trans }}
			                        </a>
			                        
			                        <a href="{{ path('per_edit', {'id': person.id}) }}" class="btn btn-sm btn-primary">
			                            {{ 'action.edit'|trans }}
			                        </a>
			                        
			                        <a href="{{ path('per_delete', {'id': person.id}) }}" class="btn btn-sm btn-danger">
			                            {{ 'action.delete'|trans }}
			                        </a>
				                </td>
                            </tr>
                         {% endfor %}
					</tbody>
				</table>
			</div>
		</div>
				{#
				<div class="row">
					<div class="text-center"> 
							<a href="{{ path('pro_create_def') }}"><button class="btn btn-primary btn-lg">Create default</button></a>
					</div>
				</div>
				#}
	</div>
{% endblock %}