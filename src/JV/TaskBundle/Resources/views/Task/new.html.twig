{% extends 'JVTaskBundle::newDetail.html.twig' %}
{% trans_default_domain 'JVTaskBundle' %} 

{% block title %}{{ parent() }} {{ 'task.new.title'|trans }}{% endblock %}
{% block theader %}{{ 'task.new.header'|trans }} {% endblock %}
{% block form %}
{{ form_start(form, { 'attr' : {'novalidate': 'novalidate', 'role' : 'form'} }) }}
                <fieldset>
                <div class="form-group">
                    {{ form_label(form.name) }}
                    {{ form_widget(form.name, { 'attr' : {'class' : 'form-control'} }) }}
                    <span class="text-danger">{{ form_errors(form.name) }}</span>
                </div>
                
                <div class="form-group">
			        {{ form_label(form.type) }}
			        {{ form_widget(form.type, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.type) }}</span>
			    </div>
			    
			    <div class="form-group">
			        {{ form_label(form.project) }}
			        {{ form_widget(form.project, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.project) }}</span>
			    </div>
                
                <div class="form-group">
			        {{ form_label(form.user) }}
			        {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
			        <span class="text-danger">{{ form_errors(form.user) }}</span>
			    </div>
			    
			    <div class="form-group">
			        {{ form_label(form.summary) }}
			        {{ form_widget(form.summary, {'attr': {'class': 'form-control' }}) }}
			        <span class="text-danger">{{ form_errors(form.summary) }}</span>
			    </div>

			    <div class="form-group">
			        {{ form_label(form.link) }}
			        {{ form_widget(form.link, {'attr': {'class': 'form-control' }}) }}
			        <span class="text-danger">{{ form_errors(form.link) }}</span>
			    </div>
			   <div class="form-group">
			        {{ form_label(form.status) }}
			        {{ form_widget(form.status, {'attr': {'class': 'form-control' }}) }}
			        <span class="text-danger">{{ form_errors(form.status) }}</span>
			    </div>
			    <div class="form-group">
			        {{ form_label(form.startDate) }}
			        {{ form_widget(form.startDate, {'attr': {'class': 'input-group date' }}) }}
			        <span class="text-danger">{{ form_errors(form.startDate) }}</span>
			    </div>
	            <div class="form-group">
			        {{ form_label(form.endDate) }}
			        {{ form_widget(form.endDate, {'attr': {'class': 'input-group date' }}) }}
			        <span class="text-danger">{{ form_errors(form.endDate) }}</span>
			    </div>
			    <div class="form-group">
			        {{ form_label(form.checked) }}
			        {{ form_widget(form.checked, {'attr': {'class': 'form-control' }}) }}
			        <span class="text-danger">{{ form_errors(form.checked) }}</span>
			    </div>
			    <div class="form-group">
			        {{ form_label(form.enabled) }}
			        {{ form_widget(form.enabled, {'attr': {'class': 'form-control' }}) }}
			        <span class="text-danger">{{ form_errors(form.enabled) }}</span>
			    </div>
			</fieldset>
				<div class="row">
					<div class="col-sm-12 text-center">
					    <p>
					        {{ form_widget(form.save, {'attr': {'class': 'btn btn-success'}}) }}
					        {{ form_end(form) }}
                                <button class="btn btn-default btn-sm" href="{{ path('task_index') }}">
                                	  	{{ 'action.backList'|trans }}                       
                                </button>
                        </p>
                	</div>
				</div>
{% endblock %}


			